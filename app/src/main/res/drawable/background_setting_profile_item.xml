<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>

            <item android:left="1dp" android:top="3dp">
                <shape>

                    <solid android:color="#4BE3DDDE" />
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>

                    <solid android:color="#5CD1D1D1" />
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item android:bottom="3dp" android:right="2dp">
                <shape>
                    <stroke android:width="@dimen/_1sdp" android:color="@color/lightgray"/>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>