<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_12sdp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.start.SplashActivity">

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:maxHeight="@dimen/_60sdp"
        android:scaleType="centerInside"
        android:src="@drawable/img_main_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="Share Recipes "
        android:textAlignment="center"
        android:textColor="@color/appcolor"
        android:textSize="@dimen/_24sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/progessValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="Share Recipes "
        android:textAlignment="center"
        android:textColor="@color/textcolor2"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/customProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <doan.npnm.sharerecipe.lib.widget.ProgressCustom
        android:id="@+id/customProgress"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_height="@dimen/_5sdp"
        app:currentValue="10"
        app:autoAnimate="true"
        app:gradient="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxValue="100"
        app:minValue="0"
        app:progressBackground="#E3E3E3"
        app:progressTint="@color/blueviolet" />


</androidx.constraintlayout.widget.ConstraintLayout>