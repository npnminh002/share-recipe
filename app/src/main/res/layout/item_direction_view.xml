<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp">


    <EditText
        android:id="@+id/ingridenName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_36sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@drawable/bg_input_start_disable"
        android:backgroundTint="@color/aliceblue"

        android:paddingStart="@dimen/_6sdp"
        android:textColor="@color/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icRemoveItem"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icRemoveItem"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:background="@drawable/button_app_background"
        android:backgroundTint="@color/aliceblue"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ic_round_remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/appcolor" />


</androidx.constraintlayout.widget.ConstraintLayout>