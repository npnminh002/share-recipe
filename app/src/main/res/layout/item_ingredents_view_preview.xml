<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/ingridenName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:background="@drawable/bg_input_start"
        android:backgroundTint="@color/aliceblue"
        android:gravity="left|top"
        android:fontFamily="@font/poppins_light"
        android:minHeight="@dimen/_36sdp"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/quantitive"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtNumId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNumId"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_app_background"
        android:backgroundTint="@color/aliceblue"
        android:padding="@dimen/_3sdp"
        android:gravity="center"
        android:text="1"
        android:lineHeight="@dimen/_36sdp"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/appcolor" />


        <TextView
            android:id="@+id/quantitive"
            android:layout_width="@dimen/_46sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bg_input_start"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:backgroundTint="@color/aliceblue"
            android:paddingEnd="@dimen/_3sdp"
            android:textAlignment="textEnd"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat,RtlSymmetry" />



</androidx.constraintlayout.widget.ConstraintLayout>