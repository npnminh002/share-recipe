<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_2sdp"
    android:background="@drawable/bg_input_start_disable"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/btnAdd"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_margin="@dimen/_3ssp"
        android:background="@drawable/bg_menu_item_select"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ic_round_add"
        android:textColor="@color/appcolor"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <doan.npnm.sharerecipe.lib.widget.CircleImageView
        android:id="@+id/imgPreivew"
        android:layout_width="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/img_us_demo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="@dimen/_12sdp"
        android:id="@+id/txtName"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd"
        app:layout_constraintStart_toEndOf="@+id/imgPreivew"
        app:layout_constraintTop_toTopOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>