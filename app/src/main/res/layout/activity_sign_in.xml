<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:padding="@dimen/_12sdp"
    tools:context=".activity.start.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:scaleType="centerInside"
            android:src="@drawable/img_main_app" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:fontFamily="@font/worksans_bold"
            android:text="Wellcome "
            android:textAlignment="center"
            android:textColor="@color/appcolor"
            android:textSize="@dimen/_24sdp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/bg_input_start"
            android:fontFamily="@font/worksans_medium"
            android:hint="Email"
            android:textSize="@dimen/_14sdp"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/darkgray" />


        <EditText
            android:id="@+id/passs"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/bg_input_start"
            android:fontFamily="@font/worksans_medium"
            android:hint="Password"
            android:textSize="@dimen/_14sdp"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/darkgray"  android:layout_width="match_parent"/>


        <TextView
            android:id="@+id/signInApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/bg_input_start"
            android:backgroundTint="#EFEDED"
            android:fontFamily="@font/worksans_bold"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="Sign In"
            android:textColor="#03A9F4" />


        <TextView
            android:id="@+id/signIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans_medium"
            android:text="Have an account Sign Up"
            android:textAlignment="center"
            android:textColor="@color/darkgray" />
    </LinearLayout>
</ScrollView>