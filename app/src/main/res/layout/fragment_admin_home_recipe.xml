                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_4sdp"
                            app:cornerRadius="0dp"
                            app:strokeColor="#ccc"
                            app:strokeWidth="1sp">

