<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp">


    <TextView
        android:gravity="top|left"
        android:id="@+id/ingridenName"
        android:layout_width="0dp"
        android:padding="@dimen/_6sdp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_36sdp"
        android:textSize="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:fontFamily="@font/poppins_light"
        android:background="@drawable/bg_input_start"
        android:backgroundTint="@color/aliceblue"
        android:textColor="@color/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNumId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNumId"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_app_background"
        android:backgroundTint="@color/aliceblue"
        android:padding="@dimen/_3sdp"
        android:gravity="center"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/appcolor" />


</androidx.constraintlayout.widget.ConstraintLayout>