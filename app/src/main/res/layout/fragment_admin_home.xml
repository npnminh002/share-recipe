<?xml version="1.0" encoding="utf-8"?>
<doan.npnm.sharerecipe.lib.widget.MyConstrainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/_6sdp"
        android:paddingVertical="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_admin_overview"
            android:padding="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/llUsersHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llRecipeVew"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/account"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRecipeVew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/recipe"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtCountRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llUsersHome"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/category"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llApprove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/approved"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtAppove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llApprove"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/report"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="0"
                    android:textColor="@color/white" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6">

            <doan.npnm.sharerecipe.lib.widget.CornerConstrainLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:padding="@dimen/_1sdp"
                app:cornerRadius="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="1dp">

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:layout_marginBottom="@dimen/_1sdp">

                                <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cornerRadius="0dp"
                                    app:strokeColor="#ccc"
                                    app:strokeWidth="1sp">

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_52sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="STT"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_136sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/recipe_id"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_252sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/name"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_137sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/auth_id"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_101sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/ingredients"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_101sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/directions"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />

                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_100sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/preparation_time"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_101sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/cooking_time"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_151sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/level"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_101sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/view"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_101sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/love"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_102sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/share"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_150sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/init_time"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_151sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/status"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>


                                    <doan.npnm.sharerecipe.lib.widget.CornerLinearLayout

                                        android:layout_width="@dimen/_151sdp"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/_5sdp"
                                        android:paddingVertical="@dimen/_4sdp"
                                        app:cornerRadius="0dp"
                                        app:strokeColor="#ccc"
                                        app:strokeWidth="1sp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/manager"
                                            android:textColor="@color/black"
                                            android:textStyle="bold" />
                                    </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>


                                </doan.npnm.sharerecipe.lib.widget.CornerLinearLayout>

                            </TableRow>

                        </TableLayout>
                    </ScrollView>
                </HorizontalScrollView>

                <ProgressBar

                    android:id="@+id/progressLoad"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:progressTint="@color/appcolor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </doan.npnm.sharerecipe.lib.widget.CornerConstrainLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</doan.npnm.sharerecipe.lib.widget.MyConstrainLayout>















































































